@{if (Session["Username"] == null)
{
    <text>Hallo!</text>
}
else
{
    <text>Hallo, @Session["Username"]!</text>
}
}

<ul>
    @if (Session["Username"] == null)
    {
        <li>
            <form action="~/Account/registerpage" method="post" style="float:right">
                <input type="submit" value="Registreer!" />
            </form>
        </li>
        <li>
            <form action="~/Account/LoginPage" method="post" onsubmit="document.getElementById('thisurl').value = document.URL;" style="float:right">
                <input name="thisurl" id="thisurl" type="hidden" />
                <input type="submit" value="Log In!" />
            </form>
        </li>
    }
    else
    {
        <li>
            <form action="~/Account/Logoff" method="post" style="float:right">
                <input type="submit" value="Log uit!" />
            </form>
        </li>
    }

</ul>
