<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Gebruikersstatus wijzigen</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>User Status Changed!</h2>
<form action="~/Admin/ChangeUserStatus" method="post" enctype="multipart/form-data">
    <fieldset>
        Naam:<br>
        <input name="name" size="30" type="text"><br> status:<br>
        <input name="status" size="30" type="number"><br>
        <input value="Verzend" type="submit">
    </fieldset>
</form>
