@model WebWinkelGroep5.Models.AccountModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Log in</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>LoginPage</h2>
<form action="/Account/Login" method="post" onsubmit="document.getElementById('passfield').value = CryptoJS.MD5(document.getElementById('passfield').value);">
    <input name="username" size="30" type="text"><br> Gebruikersnaam<br>
    <input id="passfield" name="password" size="30" type="password"><br> Wachtwoord<br>
    <input id="redirect" name="redirect" type="hidden" value="@Model.lastUrl" />
    <input value="Log In" type="submit">
</form>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
