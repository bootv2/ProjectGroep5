@model WebWinkelGroep5.Models.ProductModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Product toevoegen</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<form action="~/Product/Upload" method="post" enctype="multipart/form-data">
    <fieldset>
        <legend> Upload Image </legend>
        <label for="Image">Image</label>
        <input type="file" name="Image" />
        <br />
        <input type="submit" value="Upload" />
        <input name="action" value="submit" type="hidden">
        Naam:<br>
        <input name="name" size="30" type="text"><br> Prijs:<br>
        <input name="price" size="30" type="number"><br> Details:<br>
        <textarea name="details" rows="7" cols="30"></textarea><br>
        <input value="Verzend" type="submit">
    </fieldset>
</form>
<h1>Uploaded Image</h1>
@if (@Model.imageURL != "" && @Model.imageURL != null)
{
    <div class="result">
        <img src="~/Images/@Model.imageURL" alt="image" />

    </div>
}
