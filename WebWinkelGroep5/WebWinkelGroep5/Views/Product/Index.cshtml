@model WebWinkelGroep5.Models.ProductListModel

@{
    ViewBag.Title = "Producten";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Producten</h2>
<!--@Html.Raw(ViewBag.Message)-->
@{
    foreach (WebWinkelGroep5.Models.ProductModel m in Model.productList)
    {
        
            <a href="../Product/details?productId=@m.productId"><img src="@m.imageURL" title="@m.name" alt="Sorry voor het ongemak" style="width:auto;height:228px"></a>
            
    }
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}>